// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
    "code_actions": false
  },
  "buffer_line_height": "standard",
  "use_system_path_prompts": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",

  // Editor font (matches VS Code editor.fontFamily / editor.fontWeight)
  "buffer_font_family": "CaskaydiaCove Nerd Font",
  "buffer_font_fallbacks": [
    "Menlo for Powerline",
    "Menlo",
    "Monaco",
    "Courier New",
    "monospace"
  ],
  "buffer_font_weight": 500.0,
  "buffer_font_size": 12.0,
  "ui_font_size": 16,

  // Terminal font (matches VS Code terminal.integrated.fontFamily / fontWeight)
  "terminal": {
    "font_family": "CaskaydiaCove Nerd Font",
    "font_fallbacks": [
      "CaskaydiaCove NF",
      "Menlo for Powerline",
      "Menlo",
      "Monaco",
      "Courier New",
      "monospace"
    ],
    "font_weight": 500
  },

  // Editor behavior (matches VS Code editor.* settings)
  "tab_size": 1,
  "format_on_save": "on",
  "auto_indent_on_paste": true,
  "use_on_type_format": true,
  "show_whitespaces": "all",
  "show_edit_predictions": false,
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "colorize_brackets": true,

  // Rulers (matches VS Code editor.rulers)
  "wrap_guides": [80, 100, 114, 116, 120],

  // Indent guides (matches VS Code editor.guides.indentation)
  "indent_guides": {
    "background_coloring": "indent_aware",
    "coloring": "indent_aware",
    "enabled": true
  },

  // Tabs (matches VS Code workbench.editor.showTabs)
  "tab_bar": {
    "show": true
  },

  // Theme and icons
  "theme": {
    "mode": "system",
    "light": "VSCode Dark Modern",
    "dark": "VSCode Dark Modern"
  },
  "icon_theme": {
    "mode": "system",
    "light": "VSCode Icons for Zed (Light)",
    "dark": "VSCode Icons for Zed (Dark)"
  },

  // Git (matches VS Code git.enableCommitSigning)
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },

  // Project panel - hide gitignored entries
  "project_panel": {
    "hide_gitignore": true
  },

  // Hide common non-project files from file finder
  "file_scan_exclusions": [
    "**/.git",
    "**/.DS_Store",
    "**/node_modules",
    "**/.env"
  ],

  // Per-language overrides (matches VS Code [language] blocks)
  "languages": {
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "use_on_type_format": true
    },
    "CSS": {
      "format_on_save": "off",
      "use_on_type_format": false
    },
    "SCSS": {
      "format_on_save": "off",
      "use_on_type_format": false
    },
    "PowerShell": {
      "tab_size": 4,
      "format_on_save": "off",
      "use_on_type_format": false
    },
    "YAML": {
      "tab_size": 2
    }
  }
}
