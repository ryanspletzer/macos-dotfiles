# =============================================================================
# Ghostty Configuration
# =============================================================================
# Docs: https://ghostty.org/docs/config
# Reload: Cmd+Shift+, (no restart needed for most options)
#
# Setup: Install xterm-ghostty terminfo (needed for curses-based tools):
#   mkdir -p ~/.terminfo/{67,78}
#   cp "$(brew --prefix)/Caskroom/ghostty/*/Ghostty.app/Contents/Resources/terminfo/78/xterm-ghostty" ~/.terminfo/78/
#   cp "$(brew --prefix)/Caskroom/ghostty/*/Ghostty.app/Contents/Resources/terminfo/67/ghostty" ~/.terminfo/67/

# ---------------------------------------------------------------------------
# Font
# ---------------------------------------------------------------------------

font-family = CaskaydiaCove Nerd Font
font-size = 14

# Font thickening (macOS only, strength 0-255)
font-thicken = true

# ---------------------------------------------------------------------------
# Theme
# ---------------------------------------------------------------------------

# Matches Neovim tokyonight colorscheme
theme = TokyoNight Storm

# Darken background to match iTerm2 dark mode (overrides theme)
background = #15191f

# ---------------------------------------------------------------------------
# Window
# ---------------------------------------------------------------------------

# Padding inside the terminal area (pixels)
window-padding-x = 4
window-padding-y = 4

# Native macOS titlebar
macos-titlebar-style = native

# Don't prompt on close â€” tmux preserves sessions anyway
confirm-close-surface = false

# Match iTerm2 default window size (80x25)
window-width = 80
window-height = 25

# ---------------------------------------------------------------------------
# Input
# ---------------------------------------------------------------------------

# IMPORTANT: Treat Option as Alt so Alt+Arrow tmux bindings work
macos-option-as-alt = true

# Hide cursor while typing
mouse-hide-while-typing = true

# Copy to clipboard on select (like iTerm2 default)
copy-on-select = clipboard

# ---------------------------------------------------------------------------
# Terminal behavior
# ---------------------------------------------------------------------------

# Scrollback lines (tmux has its own, but useful outside tmux)
scrollback-limit = 50000

# Shell integration for prompt marking, cursor placement, etc.
shell-integration = detect

# Cursor style
cursor-style = bar
cursor-style-blink = false

# ---------------------------------------------------------------------------
# Keybindings
# ---------------------------------------------------------------------------

# Quick font size adjustment
keybind = super+equal=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+zero=reset_font_size
